<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headerProgress"
        android:background="@color/topBackground">

<!--        <ProgressBar-->
<!--            android:id="@+id/currentProgressbar"-->

<!--            style="?android:attr/progressBarStyleHorizontal"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->

<!--            android:layout_alignParentTop="true"-->
<!--            android:layout_centerHorizontal="true"-->

<!--            android:layout_marginTop="20dp"-->
<!--            android:layout_marginBottom="20dp"-->
<!--            android:minWidth="200dp"-->
<!--            android:minHeight="50dp"-->

<!--            android:max="100"-->
<!--            android:min="0"-->
<!--            android:progress="75"-->
<!--            android:progressTint="@color/onProgress"-->
<!--            android:progressBackgroundTint="@color/white"/>-->

        <Button
            android:id="@+id/logOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_logout" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/logOutButton"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:minWidth="300dp"
            android:minHeight="50dp"
            android:progress="75"
            android:max="100"
            android:min="0"/>


        <LinearLayout
            android:id="@+id/daySelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/progressBar1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/leftArrow_daySelector"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="?android:attr/selectableItemBackground"
                app:icon="@drawable/ic_left_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="32dp"

                android:text="Today"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rightArrow_daySelector"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="?android:attr/selectableItemBackground"
                app:icon="@drawable/ic_right_arrow" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="300dp"
        android:layout_height="8dp"
        android:layout_below="@id/headerProgress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/divider" />

    <TextView
        android:id="@+id/reminderTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="Reminder Times"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@id/reminderTimes">

        <RelativeLayout
            android:id="@+id/alarmListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:id="@+id/groupAlarm1"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:background="@drawable/alarmlist_button">

                <TextView
                    android:id="@+id/alarm1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00 - 22:00"
                    android:layout_marginTop="8dp"/>


                <ImageView
                    android:id="@+id/activeButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_checklist" />

            </LinearLayout>

            <View
                android:id="@+id/dividerAlarm1"
                android:layout_width="300dp"
                android:layout_height="8dp"
                android:layout_below="@id/groupAlarm1"
                android:layout_marginTop="12dp"
                android:background="@drawable/divider" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:id="@+id/groupAlarm2"
                android:clickable="true"
                android:layout_below="@id/dividerAlarm1"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/alarmlist_button">

                <TextView
                    android:id="@+id/alarm2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00 - 22:00"
                    android:layout_marginTop="8dp"/>


                <ImageView
                    android:id="@+id/activeButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_checklist" />

            </LinearLayout>

            <View
                android:id="@+id/dividerAlarm2"
                android:layout_width="300dp"
                android:layout_height="8dp"
                android:layout_below="@id/groupAlarm2"
                android:layout_marginTop="12dp"
                android:background="@drawable/divider" />

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/newReminder"
                android:layout_below="@id/dividerAlarm2"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/newreminder_button"
                android:text="Add New Reminder"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>






